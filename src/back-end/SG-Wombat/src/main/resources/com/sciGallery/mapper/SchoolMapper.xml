<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sciGallery.mapper.SchoolMapper">
    <update id="update" parameterType="com.sciGallery.pojo.School">
        UPDATE tb_school
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="postCode != null">
                post_code = #{postCode},
            </if>
            <if test="icsea != null">
                icsea = #{icsea},
            </if>
            <if test="abnNum != null">
                abn_num = #{abnNum},
            </if>
        </set>
        WHERE school_id = #{schoolId}
    </update>

    <select id="list" resultType="com.sciGallery.pojo.School">
        select *
        from tb_school
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
        </where>
    </select>


</mapper>